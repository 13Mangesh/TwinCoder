<h1 class="text-center">Contact Us</h1>

<form class="col-md-6 col-md-offset-3" method="post">
  {{#each errorMessages}}
    <div class="alert alert-danger">
        {{this.msg}}
    </div>
  {{/each}}
  <div class="form-group">
    <label>Name</label>
    <input class="form-control" placeholder="Your name" name="name" value = {{name}}>
  </div>
  <div class="form-group">
    <label>Email address</label>
    <input type="email" class="form-control" placeholder="Your Email Address" name="email" value = {{email}}>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label>Message</label>
    <textarea class="form-control" rows="3" placeholder="What you wanna talk about" name="message">{{message}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>